---
const slides = [
  {
    image: 'https://images.pexels.com/photos/323780/pexels-photo-323780.jpeg?auto=compress&cs=tinysrgb&w=1600',
    title: 'Architecture Moderne',
    description: 'Conception de bâtiments contemporains et durables'
  },
  {
    image: 'https://images.pexels.com/photos/1396122/pexels-photo-1396122.jpeg?auto=compress&cs=tinysrgb&w=1600',
    title: 'Construction Excellence',
    description: 'Réalisation de projets avec les plus hauts standards'
  },
  {
    image: 'https://images.pexels.com/photos/2724749/pexels-photo-2724749.jpeg?auto=compress&cs=tinysrgb&w=1600',
    title: 'Innovation & Design',
    description: 'Solutions créatives pour vos projets architecturaux'
  }
];
---

<div class="relative h-screen overflow-hidden" data-carousel>
  <!-- Slides -->
  {slides.map((slide, index) => (
    <div 
      class={`absolute inset-0 transition-opacity duration-1000 ${index === 0 ? 'opacity-100' : 'opacity-0'}`}
      data-slide
    >
      <img 
        src={slide.image} 
        alt={slide.title}
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-black/50"></div>
      <div class="absolute inset-0 flex items-center justify-center">
        <div class="text-center text-white max-w-4xl px-4">
          <h1 class="text-5xl md:text-7xl font-bold mb-6 animate-fade-in">
            {slide.title}
          </h1>
          <p class="text-xl md:text-2xl font-light opacity-90">
            {slide.description}
          </p>
        </div>
      </div>
    </div>
  ))}

  <!-- Navigation Indicators -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 flex space-x-3">
    {slides.map((_, index) => (
      <button
        class={`w-3 h-3 rounded-full transition-colors duration-300 ${
          index === 0 ? 'bg-white' : 'bg-white/50'
        }`}
        data-indicator
      ></button>
    ))}
  </div>
</div>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fade-in 1s ease-out;
  }
</style>